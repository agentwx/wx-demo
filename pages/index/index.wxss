/**index.wxss**/
.btnOut{
  width: 100%;
  display: inline-flex;
  justify-content: space-between;
}
.picker{
  flex: 0 1 auto;
  margin: 0 20rpx;
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
  background-color: #337ab7;
  border: 2rpx solid #2e6da4;
  color: #fff;
  padding: 4rpx 12rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.picker.true{
  background-color: #f7f7f7;
  border: 2rpx solid #eee;
  color: #999;
}
.imgView{
  text-align: center;
  margin: 10px 0;
}
.hr{
  height: 2rpx;
  background-color: #eee;
  margin: 10px 0;
}
.canvasView canvas{
  box-sizing: border-box;
  width: 100%;
  border: 4rpx solid red;
  background: url("data:image/png;base64,") repeat;
}
.waiting{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,.5);
  color: #fff;
  font-size: 80rpx;
}
.waitingIn{
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}